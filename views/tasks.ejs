  <body>


  <div class="task-container">
  <div id="myLists">

    <article id="movies" data-category_id="1">
      <header>
        <div><i class="fas fa-film"></i>Movies and TV</div>
      </header>
      <ul class="lists" id="movies1" data-category_id="1" ondrop="drop(event)" ondragover="allowDrop(event)">
        <% for (const item of data) { %>
          <% if (item.category_id === 1) { %>
          <li class='list-item' id="item-<%= item.id %>" draggable="true" ondragstart="drag(event)"> <%= item.input %> </li>
          <% } %>
        <%}%>
      </ul>
    </article>

